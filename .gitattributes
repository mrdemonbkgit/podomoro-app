# Handle line endings automatically for files detected as text
* text=auto

# Force LF line endings for source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.cjs text eol=lf
*.mjs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.css text eol=lf

# Force LF for config files
.prettierrc text eol=lf
.prettierignore text eol=lf
.gitignore text eol=lf
.firebaserc text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.mp3 binary
*.wav binary
*.ogg binary

